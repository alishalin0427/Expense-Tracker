@model ExpenseTracker.Models.Expense

@{
    ViewData["Title"] = "Details";
}

<div class="header-container">
    <a asp-action="Index" class="back-btn">
        <span class="btn-icon">←</span>
        <span class="btn-text">回上一頁</span>
    </a>
    <h3>內容</h3>
</div>
<hr />
<div>
    <div class="form-wrapper">
    <dl class="form-wrap">
        <div class="form-container">
        <dt class="form-group">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "form-group">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "form-content">
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd class="form-title">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class="form-content">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="form-title">
            @Html.DisplayFor(model => model.Category)
        </dd>
        <dt class="form-content">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="form-title">
            @Html.DisplayFor(model => model.Date)
        </dd>
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">編輯</a>
        </div>
            
        </dl>
    </div>
</div>

<style>
    .header-container {
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        margin-top: 40px;
        margin-bottom: 20px;
        vertical-align: middle;
    }

        .header-container a {
            position: absolute;
            left: 0;
        }
    .form-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 60vh;
    }

    .form-container {
        width: 100%;
        max-width: 1000px;
        padding: 30px;
        background-color: #f8f9fa;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        
    }
    .form-group{
        align-items: center;
    }
    .back-btn {
        position: absolute;
        top: 1px;
        left: 1px;
        z-index: 1000;
        background-color: #007bff;
        color: white;
        border-radius: 50px;
        padding: 8px 10px;
        box-shadow: 0 4px 12px rgba(0, 123, 255, 0.15);
        font-weight: 500;
        text-decoration: none;
        transition: all 0.4s ease;
        overflow: hidden;
        white-space: nowrap;
        display: flex;
        align-items: center;
        justify-content: center;
        min-width: 48px;
        height: 48px;
    }

    .btn-icon {
        font-size: 18px;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        line-height: 1;
        vertical-align: middle;
    }

    .btn-text {
        max-width: 0;
        overflow: hidden;
        opacity: 0;
        margin-left: 0;
        transition: all 0.4s ease;
        white-space: nowrap;
        line-height: 1;
        font-size: 14px;
        display: flex;
        align-items: center;
        vertical-align: middle;
    }

    .back-btn:hover {
        min-width: 120px;
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(0, 123, 255, 0.25);
        text-decoration: none;
        color: white;
    }

        .back-btn:hover .btn-text {
            max-width: 80px;
            opacity: 1;
            margin-left: 8px;
        }
</style>