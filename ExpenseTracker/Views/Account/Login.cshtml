<!DOCTYPE html>
<html>
<head>
    <title>系統登入</title>
    <meta charset="utf-8" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container mt-3">
        <div class="row justify-content-center">
            <div class="col-md-2 col-lg-4">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h4 class="text-center mb-0">系統登入</h4>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-info">
                            <strong>測試帳號：</strong><br>
                            <small>
                                會員 - 帳號：admin123，密碼：test@1234
                            </small>
                        </div>
                        @if (TempData["LoginError"] != null)
                        {
                            <div class="alert alert-danger">
                                @TempData["LoginError"]
                            </div>
                        }

                        <form asp-action="Login" method="post">
                            <div class="mb-3">
                                <label for="account" class="form-label">帳號</label>
                                <input name="account" id="account" class="form-control" placeholder="請輸入帳號" required />
                            </div>

                            <div class="mb-3">
                                <label for="password" class="form-label">密碼</label>
                                <input name="password" id="password" type="password" class="form-control" placeholder="請輸入密碼" required />
                            </div>

                            <div class="mb-3">
                                <label for="role" class="form-label">身份</label>
                                <select name="role" id="role" class="form-select" required>
                                    <option value="member">會員</option>
                                </select>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">登入</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    
</body>
</html>